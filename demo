                userTabs.forEach(tab => {
                    tab.addEventListener('click', e => {
                        e.preventDefault();
                        userTabs.forEach(t => t.classList.remove('user-tab-active', 'text-accent'));
                        tab.classList.add('user-tab-active', 'text-accent');
                        renderUserTable(tab.dataset.filter);
                    });
                });
            };
            
