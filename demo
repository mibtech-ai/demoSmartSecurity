            const viewModalFaceImage = document.getElementById('view-modal-face-image');
            const viewModalPersonName = document.getElementById('view-modal-person-name');
            const viewModalHistoryTable = document.getElementById('view-modal-history-table');

            // --- Entry Detail Page Elements ---
