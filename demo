                ];
                zonesList.innerHTML = zones.map(z => createToggle(z.id, z.title, z.desc, z.checked)).join('');

                const schedulesList = document.getElementById('access-schedules-list');
                const schedules = [
                    { id: 'always', title: 'Always', desc: '24/7 access'},
                    { id: 'business-hours', title: 'Business Hours', desc: 'Access during business hours', checked: true },
                ];
                schedulesList.innerHTML = schedules.map(s => createToggle(s.id, s.title, s.desc, s.checked)).join('');

                saveUserAccessBtn.disabled = true;
                saveUserAccessBtn.classList.add('opacity-50', 'cursor-not-allowed');

                userAccessForm.addEventListener('change', () => {
                    saveUserAccessBtn.disabled = false;
                    saveUserAccessBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                }, { once: true });

                userAccessPage.classList.remove('hidden');
                showPage('#user-access');
            };

            cancelUserAccessBtn.addEventListener('click', () => showPage('#access-management'));
            userAccessForm.addEventListener('submit', (e) => {
                e.preventDefault();
                alert('Changes saved successfully!');
                showPage('#access-management');
            });


            // --- ACCESS MANAGEMENT PAGE ---
            const allUsers = [
                { name: 'Sophia Carter', email: 'sophia.carter@example.com', org: 'Sales Dept.', status: 'Employee', lastVisit: '2025-06-07', type: 'employee' },
                { name: 'Owen Bennett', email: 'owen.bennett@example.com', org: 'Tech Innovators Inc.', status: 'Guest', lastVisit: '2025-06-08', type: 'guest' },
                { name: 'Liam Johnson', email: 'liam.j@corp.net', org: 'Engineering', status: 'Employee', lastVisit: '2025-06-08', type: 'employee' },
                { name: 'Lucas Hayes', email: 'lucas.hayes@example.com', org: 'Future Dynamics Corp.', status: 'Guest', lastVisit: '2025-06-05', type: 'guest' },
            ];

            const renderUserTable = (filter) => {
                const userTableBody = document.getElementById('user-list-table');
                const filteredUsers = allUsers.filter(user => filter === 'all' || user.type === filter);
                
                if (filteredUsers.length === 0) {
                    userTableBody.innerHTML = `<tr><td colspan="6" class="p-4 text-center text-gray-400">No users found.</td></tr>`;
                    return;
                }

                userTableBody.innerHTML = filteredUsers.map(user => {
                     const statusClass = user.status === 'Employee' ? 'bg-blue-500/20 text-blue-300' : 'bg-purple-500/20 text-purple-300';
                     return `
                        <tr class="border-t border-panel hover:bg-gray-800/20">
                            <td class="p-4 font-semibold">${user.name}</td>
                            <td class="p-4 text-gray-400">${user.email}</td>
                            <td class="p-4">${user.org}</td>
                            <td class="p-4"><span class="${statusClass} px-2 py-1 rounded-full text-xs font-semibold">${user.status}</span></td>
                            <td class="p-4 text-gray-400">${user.lastVisit}</td>
                            <td class="p-4"><button class="user-view-btn text-accent hover:underline text-sm font-semibold" data-name="${user.name}" data-status="${user.status}">View</button></td>
                        </tr>
                     `;
                }).join('');

