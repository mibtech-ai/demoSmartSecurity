                'settings': { title: 'Settings', subtitle: 'Configure users, roles, and system options' },
                'add-camera': { title: 'Add Camera', subtitle: 'Register a new device to the system' },
                'face-log': { title: 'Face Recognition Log', subtitle: 'Detailed log of recognized and unrecognized faces.'},
                'user-access': { title: 'Access Control', subtitle: 'Manage access for a specific user.'},
                'add-user-choice': { title: 'Add User', subtitle: 'Select the type of person to register.' },
