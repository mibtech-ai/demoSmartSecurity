            printReportBtn.addEventListener('click', () => alert('Printing report... (Feature not implemented)'));


            // --- FACE LOG PAGE ---
            const showFaceLogPage = (cameraData) => {
                lastFaceLogData = cameraData; 
                pages.forEach(p => p.classList.add('hidden'));

                document.getElementById('face-log-title').textContent = `${cameraData.name}: Face Recognition Log`;
                
                const logTableBody = document.getElementById('face-log-table');
                const mockLogs = [
                    { time: '10:23 AM', eventId: 'E12345', name: 'Ethan Harper', status: 'Recognized', img: 'EH' },
                ];

                logTableBody.innerHTML = mockLogs.map(log => {
                    const statusClass = log.status === 'Recognized' ? 'bg-green-500/20 text-green-300' : 'bg-yellow-500/20 text-yellow-300';
                    return `
                        <tr class="border-t border-panel hover:bg-gray-800/20">
                            <td class="p-4 text-gray-400">${log.time}</td>
                            <td class="p-4">${log.eventId}</td>
                            <td class="p-4"><img src="https://placehold.co/32x32/FFFFFF/0C1F3F?text=${log.img}" class="w-8 h-8 rounded-full"></td>
                            <td class="p-4"><span class="${statusClass} px-2 py-1 rounded-full text-xs font-semibold">${log.status}</span></td>
                            <td class="p-4"><button class="face-log-details-btn text-accent hover:underline text-sm font-semibold" data-name="${log.name}" data-time="${log.time}" data-img-char="${log.img}">View Details</button></td>
                        </tr>
                    `;
                }).join('');

                logTableBody.querySelectorAll('.face-log-details-btn').forEach(btn => {
                    btn.addEventListener('click', e => {
                         const button = e.currentTarget;
                         const logData = {
                             imgSrc: `https://placehold.co/40x40/FFFFFF/0C1F3F?text=${button.dataset.imgChar}`,
                             name: button.dataset.name,
                             time: button.dataset.time,
                             confidence: 'N/A' 
                         };
                         lastCameraDetailData = { name: cameraData.name };
                         showEntryDetail(logData);
                    });
                });

                faceLogPage.classList.remove('hidden');
                pageTitle.textContent = pageDetails['face-log'].title;
                pageSubtitle.textContent = pageDetails['face-log'].subtitle;
            };


            // --- ENTRY DETAIL PAGE LOGIC ---
            const showEntryDetail = (logData) => {
                pages.forEach(p => p.classList.add('hidden'));

                document.getElementById('entry-detail-title').textContent = `${lastCameraDetailData.name} Entry Details`;
                document.getElementById('entry-detail-cam-breadcrumb').textContent = lastCameraDetailData.name;
                document.getElementById('entry-detail-image').src = logData.imgSrc.replace('40x40', '400x400').replace('32x32', '400x400');
                document.getElementById('entry-detail-timestamp').textContent = logData.time;
                document.getElementById('entry-detail-status').textContent = 'Known'; 
                document.getElementById('entry-detail-name').textContent = logData.name;
                document.getElementById('entry-detail-data').textContent = `Confidence: ${logData.confidence}`;

                const historyTable = document.getElementById('entry-detail-history');
                const mockHistory = [ { camera: 'Lobby Cam', time: '10:15 AM' } ];
                 historyTable.innerHTML = mockHistory.map(log => `
                     <tr class="border-t border-panel hover:bg-gray-800/20">
                        <td class="p-3">${log.camera}</td>
                        <td class="p-3 text-gray-400">${log.time}</td>
                    </tr>
                `).join('');

                entryDetailPage.classList.remove('hidden');
                pageTitle.textContent = "Entry Details";
                pageSubtitle.textContent = `Log from ${lastCameraDetailData.name} at ${logData.time}`;
            };
            
            backToLogsBtn.addEventListener('click', () => {
                 if (lastFaceLogData) {
                    showFaceLogPage(lastFaceLogData);
                } else if (lastCameraDetailData) {
                    showCameraDetail(lastCameraDetailData);
                } else {
                    showPage('#cameras'); 
                }
            });


            // --- Show Camera Detail View ---
            const showCameraDetail = (cameraData) => {
                lastCameraDetailData = cameraData; 
                lastFaceLogData = null;
                pages.forEach(p => p.classList.add('hidden'));

                document.getElementById('camera-detail-breadcrumb').textContent = cameraData.name;
                document.getElementById('camera-detail-title').textContent = cameraData.name;
                document.getElementById('camera-detail-location').textContent = cameraData.location;
                document.getElementById('camera-detail-feed').src = cameraData.feedSrc.replace('600x400', '1200x675');
                
                const logTableBody = document.getElementById('camera-detail-log');
                const mockLogs = [ { img: 'EH', name: 'Ethan Harper', time: '10:15 AM', confidence: '98%' } ];
                logTableBody.innerHTML = mockLogs.map(log => `
                    <tr class="border-t border-panel hover:bg-gray-800/20">
                        <td class="p-4"><img src="https://placehold.co/40x40/FFFFFF/0C1F3F?text=${log.img}" class="w-10 h-10 rounded-full" data-name="${log.name}" data-time="${log.time}" data-confidence="${log.confidence}"></td>
                        <td class="p-4">${log.name}</td>
                        <td class="p-4">${log.time}</td>
                        <td class="p-4"><span class="accent-color font-semibold">${log.confidence}</span></td>
                        <td class="p-4 text-center"><button class="camera-log-view-btn text-accent hover:underline">View</button></td>
                    </tr>
                `).join('');

                logTableBody.querySelectorAll('.camera-log-view-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const row = e.target.closest('tr');
                        const img = row.querySelector('img');
                        const logData = {
                            imgSrc: img.src,
                            name: img.dataset.name,
                            time: img.dataset.time,
                            confidence: img.dataset.confidence
                        };
                        showEntryDetail(logData);
                    });
                });

                cameraDetailPage.classList.remove('hidden');
                pageTitle.textContent = cameraData.name;
                pageSubtitle.textContent = "Live View & Event Log";
                document.querySelectorAll('#main-nav a').forEach(link => link.classList.remove('nav-active'));
            }
            
            // --- CAMERA/SNAPSHOT LOGIC ---
            const stopCamera = () => {
                if (currentStream) {
                    currentStream.getTracks().forEach(track => track.stop());
                }
                currentStream = null;
            };

            const startCamera = async (videoElement, canvasElement) => {
                stopCamera(); // Stop any existing streams
                 videoElement.classList.remove('hidden');
                 canvasElement.classList.add('hidden');
                try {
                    if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
                        currentStream = await navigator.mediaDevices.getUserMedia({ video: true });
                        videoElement.srcObject = currentStream;
                    }
                } catch (error) {
                    console.error("Error accessing camera:", error);
                    alert("Could not access the camera. Please ensure you have given permission.");
                }
            };

            const captureSnapshot = (videoElement, canvasElement) => {
                 if (currentStream) {
                    const context = canvasElement.getContext('2d');
                    canvasElement.width = videoElement.videoWidth;
                    canvasElement.height = videoElement.videoHeight;
                    context.drawImage(videoElement, 0, 0, videoElement.videoWidth, videoElement.videoHeight);
                    videoElement.classList.add('hidden');
                    canvasElement.classList.remove('hidden');
                    stopCamera();
                }
            };

            captureUserBtn.addEventListener('click', () => captureSnapshot(document.getElementById('user-video'), document.getElementById('user-canvas')));
            captureGuestBtn.addEventListener('click', () => captureSnapshot(document.getElementById('guest-video'), document.getElementById('guest-canvas')));


            // --- NAVIGATION LOGIC ---
            const showPage = (hash) => {
                stopCamera(); // Always stop camera when navigating
                const pageKey = (hash.substring(1) || 'dashboard').split('/')[0];
                const pageId = pageKey + '-page';
                
                pages.forEach(p => p.classList.add('hidden'));

                const targetPage = document.getElementById(pageId);
                if (targetPage) {
                    targetPage.classList.remove('hidden');
                    if (pageId === 'access-management-page') {
                        setupAccessManagementPage();
                    } else if (pageId === 'history-page') {
                        setupActivityHistoryPage();
                    } else if (pageId === 'reports-page') {
                        setupReportsPage();
                    }
                    else if (pageId === 'register-user-page') {
                        startCamera(document.getElementById('user-video'), document.getElementById('user-canvas'));
                    } else if (pageId === 'register-guest-page') {
                        startCamera(document.getElementById('guest-video'), document.getElementById('guest-canvas'));
                    }
                } else {
                    document.getElementById('dashboard-page').classList.remove('hidden');
                }

                document.querySelectorAll('#main-nav a').forEach(link => {
                    const linkHash = link.getAttribute('href').substring(1);
                    if (linkHash === pageKey || (pageKey.startsWith('add-user') && linkHash === 'access-management') || (pageKey.startsWith('register') && linkHash === 'access-management') || (pageKey.startsWith('user-access') && linkHash === 'access-management')) {
                         link.classList.add('nav-active');
                    } else {
                        link.classList.remove('nav-active');
                    }
                });

                const details = pageDetails[pageKey];
                if(details) {
                    pageTitle.textContent = details.title;
                    pageSubtitle.textContent = details.subtitle;
                }
            };
            
            addUserBtn.addEventListener('click', () => showPage('#add-user-choice'));
            goToRegisterUserBtn.addEventListener('click', () => showPage('#register-user'));
            goToRegisterGuestBtn.addEventListener('click', () => showPage('#register-guest'));
            cancelFormBtns.forEach(btn => btn.addEventListener('click', () => showPage('#access-management')));

            addCameraBtn.addEventListener('click', () => showPage('#add-camera') );
            cancelAddCameraBtn.addEventListener('click', () => showPage('#cameras') );
            addCameraForm.addEventListener('submit', (e) => { e.preventDefault(); showPage('#cameras'); });
            
            registerUserForm.addEventListener('submit', (e) => {
                e.preventDefault();
                alert('New user registered successfully!');
                showPage('#access-management');
            });
            registerGuestForm.addEventListener('submit', (e) => {
                e.preventDefault();
                alert('Guest registered successfully!');
                showPage('#access-management');
            });


            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const hash = e.currentTarget.getAttribute('href');
                    history.pushState(null, '', hash);
                    showPage(hash);
                    if(window.innerWidth < 768) {
                        sidebar.classList.add('-translate-x-full');
                    }
                });
            });

            window.addEventListener('popstate', (event) => {
                showPage(window.location.hash || '#dashboard');
            });

            // --- Authentication Simulation ---
            loginForm.addEventListener('submit', (e) => {
                e.preventDefault();
                loginScreen.classList.add('hidden');
                appContainer.classList.remove('hidden');
                appContainer.classList.add('flex');
                showPage(window.location.hash || '#dashboard');
            });

            logoutButton.addEventListener('click', () => {
                appContainer.classList.add('hidden');
                appContainer.classList.remove('flex');
                loginScreen.classList.remove('hidden');
                history.pushState(null, '', ' ');
            });
            
            // --- Event Listeners for Live Feed Cards ---
            liveFeedCards.forEach(card => {
                if (!card.querySelector('img[src*="Offline"]')) {
                    card.style.cursor = 'pointer';
                    card.addEventListener('click', () => {
                        const cameraData = {
                            name: card.querySelector('p.font-semibold').textContent,
                            location: card.querySelector('.relative') ? 'Main Entrance, Floor 1' : 'Location Placeholder',
                            feedSrc: card.querySelector('img').src,
                        };
                        showCameraDetail(cameraData);
                        history.pushState({camera: cameraData.name}, '', `#cameras/${cameraData.name.replace(/\s+/g, '-')}`);
                    });
                }
            });

            // --- Event Listeners for Camera List Page ---
            const setupCameraListNavigation = () => {
                 document.querySelectorAll('#camera-list-table .view-logs-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const button = e.currentTarget;
                        const cameraData = {
                            name: button.dataset.cameraName
                        };
                        showFaceLogPage(cameraData);
                        history.pushState({camera: cameraData.name}, '', `#face-log/${cameraData.name.replace(/\s+/g, '-')}`);
                    });
                });
            };
            
            setupCameraListNavigation();

            // --- Mobile Menu ---
            const setupMobileSidebar = () => {
                if (window.innerWidth < 768) {
                    sidebar.classList.add('fixed', 'h-full', 'z-40', 'top-0', 'left-0', '-translate-x-full');
                } else {
                    sidebar.classList.remove('fixed', 'h-full', 'z-40', 'top-0', 'left-0', '-translate-x-full');
                }
            };
            
            mobileMenuButton.addEventListener('click', () => {
                sidebar.classList.toggle('-translate-x-full');
            });
            
            // Initial setup call
            setupMobileSidebar();
            window.addEventListener('resize', setupMobileSidebar);
            
            if (appContainer.style.display !== 'hidden') {
                 showPage(window.location.hash || '#dashboard');
            }
        });
    </script>
</body>
</html>
