            // --- GENERAL MODAL LOGIC ---
            const closeModal = () => {
                allModals.forEach(modal => modal.classList.add('hidden'));
            };

            document.querySelectorAll('.modal-close-btn, .modal-action-btn').forEach(btn => {
                btn.addEventListener('click', closeModal);
            });
            allModals.forEach(modal => {
                 modal.addEventListener('click', (e) => {
                    if (e.target === modal) closeModal();
                });
            });


            // --- ACTION MODAL LOGIC ---
            actionBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const row = e.target.closest('tr');
                    const smallImgSrc = row.querySelector('img').src;
                    modalFaceImage.src = smallImgSrc.replace('32x32', '400x400');
                    actionModal.classList.remove('hidden');
                });
            });
            
            // --- VIEW DETAILS MODAL LOGIC ---
            viewBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const row = e.target.closest('tr');
                    const image = row.querySelector('img');
                    const smallImgSrc = image.src;
                    const personName = image.getAttribute('data-name');
                    
                    viewModalFaceImage.src = smallImgSrc.replace('32x32', '400x400');
                    viewModalPersonName.textContent = personName;

                    const mockHistory = [
                        { time: '02:15:33 PM', camera: 'Main Entrance', action: 'Entry Attempt' },
                    ];

                    viewModalHistoryTable.innerHTML = mockHistory.map(log => `
                        <tr class="border-t border-panel hover:bg-gray-800/20">
                            <td class="p-3 text-gray-400">${log.time}</td>
                            <td class="p-3">${log.camera}</td>
                            <td class="p-3">${log.action}</td>
                            <td class="p-3 text-center whitespace-nowrap">
                                <button class="text-green-400 hover:underline text-xs">Grant Access</button>
                                <span class="text-gray-600 mx-1">|</span>
                                <button class="text-red-400 hover:underline text-xs">Deny</button>
                                <span class="text-gray-600 mx-1">|</span>
                                <button class="text-yellow-400 hover:underline text-xs">Intruder</button>
                            </td>
                        </tr>
                    `).join('');

                    viewDetailsModal.classList.remove('hidden');
                });
            });

            // --- USER ACCESS CONTROL PAGE ---
            const showUserAccessPage = (userData) => {
                pages.forEach(p => p.classList.add('hidden'));

                document.getElementById('user-access-name').textContent = userData.name;
                document.getElementById('user-access-name-main').textContent = userData.name;
                document.getElementById('user-access-role').textContent = userData.status;
                document.getElementById('user-access-image').src = `https://placehold.co/80x80/FFFFFF/0C1F3F?text=${userData.name.charAt(0)}`;
                
                const createToggle = (id, title, description, checked = false) => `
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="font-semibold">${title}</p>
                            <p class="text-sm text-gray-400">${description}</p>
                        </div>
                        <div class="relative inline-block w-10 mr-2 align-middle select-none transition duration-200 ease-in">
                            <input type="checkbox" name="${id}" id="${id}" class="toggle-checkbox absolute block w-6 h-6 rounded-full bg-main border-4 appearance-none cursor-pointer" ${checked ? 'checked' : ''}/>
                            <label for="${id}" class="toggle-label block overflow-hidden h-6 rounded-full bg-gray-600 cursor-pointer"></label>
                        </div>
                    </div>`;

                const zonesList = document.getElementById('access-zones-list');
                const zones = [
                    { id: 'all-zones', title: 'All Zones', desc: 'All access' },
